@using InfraStructure.ViewModels;
@model LoginVm

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@{
    ViewData["Title"] = "Login";
}


<div class="row" style="margin-top:10%">
    @* <h4 style="justify-content:center;pad:auto">Wellcome to Quiz App</h4>*@
    <div class="col-md-4 mx-auto" style="border:2px solid white;border-radius:3%;padding:2% 2%">
        <h3 class="text-center">Login</h3>
        @*<form asp-action="Login" asp-controller="Login" method="post">*@
        @using (Html.BeginForm("StudentLogin", "Login", FormMethod.Post))
        {
            <div class="text-danger validation-summary-errors"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.username, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.username, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.username)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.password, new { @class = "control-label" })
                @Html.PasswordFor(model => model.password, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.password)</span>
                <p style="color:red">@ViewBag.errorMessage</p>
            </div>
            <hr />
            <div class="form-group">
                @*<a type="submit" asp-action="Login" asp-controller="Login" class="btn btn-outline-dark">Login</a>*@
                <input type="submit" value="Login" class="btn btn-outline-dark" />
            </div>
        }
        @* </form>*@
    </div>
</div>