@model InfraStructure.ViewModels.SetExamCreateVm

@{
    ViewData["Title"] = "SetExam";
}
@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h3>Set Exam</h3>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <h6> @ViewBag.ErrorMessage @ViewBag.errorMessage1</h6>
    </div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetExam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExamName" class="control-label"></label>
                <input asp-for="ExamName" class="form-control" required="required" />
                <span asp-validation-for="ExamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfQuestions" class="control-label"></label>
                <input asp-for="NoOfQuestions" class="form-control" required="required"/>
                <span asp-validation-for="NoOfQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select class="form-control" asp-for="CategoryId" required="required">
                    <option> Select Category</option>
                    @if (Model.Categories != null && Model.Categories.Count() > 0)
                    {
                        foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



