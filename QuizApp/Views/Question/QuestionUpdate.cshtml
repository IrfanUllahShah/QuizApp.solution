@model InfraStructure.ViewModels.QuestionUpdateVm

@{
    ViewData["Title"] = "QuestionUpdate";
}
@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h3>Question Update</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="QuestionUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(p=>p.QId)
            @* <div class="form-group">
                <label asp-for="QId" class="control-label"></label>
                <input asp-for="QId" class="form-control" />
                <span asp-validation-for="QId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="QText" class="control-label"></label>
                <input asp-for="QText" class="form-control" />
                <span asp-validation-for="QText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ans1" class="control-label"></label>
                <input asp-for="Ans1" class="form-control" />
                <span asp-validation-for="Ans1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ans2" class="control-label"></label>
                <input asp-for="Ans2" class="form-control" />
                <span asp-validation-for="Ans2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ans3" class="control-label"></label>
                <input asp-for="Ans3" class="form-control" />
                <span asp-validation-for="Ans3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ans4" class="control-label"></label>
                <input asp-for="Ans4" class="form-control" />
                <span asp-validation-for="Ans4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAns" class="control-label"></label>
                <input asp-for="CorrectAns" class="form-control" />
                <span asp-validation-for="CorrectAns" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select class="form-control" asp-for="CategoryId">
                    <option> Select Category</option>
                    @if (Model.Categories != null && Model.Categories.Count() > 0)
                    {
                        foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



