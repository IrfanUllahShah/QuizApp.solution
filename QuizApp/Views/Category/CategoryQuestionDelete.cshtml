<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ans1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ans2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ans3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ans4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            int index = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @index
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ans1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ans2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ans3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ans4)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CorrectAns)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                        <a class="btn btn-danger" asp-area="" asp-controller="Category" asp-action="CategoryQuestionDelete" asp-route-id="@item.QId">Delete</a>
                    </td>
                </tr>
                index++;
            }

        }
    </tbody>
</table>
