                        <a asp-action="AdminLogout" asp-controller="Login" class="btn btn-outline-info">Logout</a>
                    </form>*@
                </div>
            </div>
        </nav>
    </header>

    @* Main body*@

    <div class="container-fluid" style="display: flex;">
        <div class="col-md-2 sidebar">
            <div class="admin-info">
                <img src="~/Images/pic.jpg" alt="Admin Image">
                <h4>Admin Name</h4>
            </div>
            <div class="nav-links">
                <a class="nav-link active" href="#">
                    Home
                    <span class="visually-hidden">(current)</span>
                </a>
                <a class="nav-link active" asp-action="Admins" asp-controller="Admin">Admins</a>
                <a class="nav-link active" href="#">Categories</a>
                <a class="nav-link active" href="#">Students</a>
                <a class="nav-link active" href="#">Questions</a>
                <a class="nav-link active" href="#">Set Exam</a>

                <form class="d-flex">
                    <a asp-action="AdminLogout" asp-controller="Login" class="btn btn-light">Logout</a>
                </form>
            </div>
        </div>

        <main role="main" class="col-md-10 mainBody">
            <!-- Your main content goes here -->
            @RenderBody()

           @* <footer class="border-top footer text-muted">
                <div class="container">
