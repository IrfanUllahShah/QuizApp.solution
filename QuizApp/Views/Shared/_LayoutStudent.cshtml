@*@model InfraStructure.ViewModels.StudentVm*@


@{
   
    //var m = TempData["model"] as InfraStructure.ViewModels.StudentVm;
    var m = Context.Session.GetObject<InfraStructure.ViewModels.StudentVm>("StudentData");

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizApp</title>
    <link rel="stylesheet" href="~/theme-cyborg/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <script type="text/javascript" src="~/js/JavaScript.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary adminNavbar" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><h4 style="padding-left:5%">Student Dashboard</h4></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="display: flex;">
        <div class="col-md-2 sidebar">
            <div class="admin-info">
                @*<img src="~/Images/pic.jpg" alt="Student Image">*@
                <img class="studentImage" decoding="async" src="@("~/Images/"+m.Image)" asp-append-version="true" style="height:100px;width:100px;border-radius:50%" alt="Student Image" />
                <h4>@m.Name</h4>
            </div>
            <hr />
            <div class="nav-links">
                <a class="nav-link active" asp-action="Dashboard" asp-controller="Student">
                    Home
                    <span class="visually-hidden">(current)</span>
                </a>
                <a class="nav-link active" asp-action="StudentDetailsForStudent" asp-controller="Student" asp-route-id="@m.Id">Profile</a>
                <a class="nav-link active" asp-action="StudentUpdateForstudent" asp-controller="Student" asp-route-id="@m.Id">Edit Profile</a>
                <a class="nav-link active" asp-action="StartExam" asp-controller="Student">Start Exam</a>
                <hr>
                <br />

                <form class="d-flex">
                    <a asp-area="Login" asp-action="StudentLogout" asp-controller="Login" class="btn btn-outline-dark">Logout</a>
                </form>
            </div>
        </div>

        <main role="main" class="col-md-10 mainBody">
            <!-- Your main content goes here -->
            @RenderBody()

        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
